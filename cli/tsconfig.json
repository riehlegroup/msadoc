{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2022",
    "outDir": "dist/",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "rootDir": ".",

    "strict": true,
    "noImplicitOverride": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true
  },

  "include": ["src"]
}
